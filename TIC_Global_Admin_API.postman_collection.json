        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"key\": \"{{admin_key}}\",\n  \"action\": \"update-transaction\",\n  \"transactionId\": \"REPLACE_WITH_ACTUAL_DEPOSIT_ID\",\n  \"transactionType\": \"deposit\",\n  \"status\": \"approved\",\n  \"adminNotes\": \"Approved via Postman API\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin-actions",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-actions"]
        },
        "description": "Approve a specific deposit by ID. Replace REPLACE_WITH_ACTUAL_DEPOSIT_ID with the real deposit ID from the pending deposits list."
