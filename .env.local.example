# =====================================================
# TIC GLOBAL ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.local and update with your actual values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =====================================================
# AUTHENTICATION
# =====================================================
# NextAuth Configuration
NEXTAUTH_URL=http://localhost:8000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =====================================================
# EMAIL CONFIGURATION
# =====================================================
# SMTP Configuration for Admin Notifications
SMTP_HOST=mail.privateemail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_EMAIL=admint@ticgloballtd.com
SMTP_PASSWORD=your_smtp_password

# App URL for Email Links
NEXT_PUBLIC_APP_URL=http://localhost:8000

# =====================================================
# TRONPY CONFIGURATION - TRC20 ONLY
# =====================================================
# TRON Network Configuration
TRON_NETWORK=mainnet
TRONGRID_API_KEY=your_trongrid_api_key_here

# TRON Wallet Configuration (for receiving deposits)
TRON_MASTER_WALLET=your_tron_master_wallet_address
TRON_PRIVATE_KEY=your_tron_private_key_here

# =====================================================
# PAYMENT CONFIGURATION
# =====================================================
# Supported Networks (TRC20 only)
SUPPORTED_NETWORKS=tron

# Payment Method Configuration
USDT_TRC20_ADDRESS=your_tron_master_wallet_address

# Transaction Limits
MIN_DEPOSIT_AMOUNT=10
MIN_WITHDRAWAL_AMOUNT=10
MAX_DEPOSIT_AMOUNT_TRC20=200000

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================
# Development Mode
NODE_ENV=development

# Debug Logging
DEBUG_TRONPY=false
DEBUG_PAYMENTS=false
DEBUG_AUTH=false

# =====================================================
# SECURITY SETTINGS
# =====================================================
# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session Configuration
SESSION_MAX_AGE=86400

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# =====================================================
# FEATURE FLAGS
# =====================================================
# Enable/Disable Features
ENABLE_DEPOSITS=true
ENABLE_WITHDRAWALS=true
ENABLE_REFERRALS=true
ENABLE_REAL_TIME_UPDATES=true

# =====================================================
# MONITORING & ANALYTICS
# =====================================================
# Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# =====================================================
# BACKUP & RECOVERY
# =====================================================
# Database Backup Configuration (Optional)
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
